<?xml version="1.0" encoding="UTF-8"?>
<!-- @version SVN $Id$ -->
<project name="Nafu Documentation Builder" default="phpdoc" basedir=".">

	<property name="version" value="1.5.23" />

	<property name="source" value="libraries/joomla" />

	<target name="phpdoc" description="Generate API documentation using PHPDoX">
		<delete dir="${basedir}/build/${version}" />

		<mkdir dir="${basedir}/build/${version}" />

		<exec executable="phpdox">
			<arg value="-c" />
			<arg path="${version}/${source}" />
			<arg value="-x" />
			<arg path="${basedir}/build/${version}/xml" />
		</exec>

		<exec executable="${basedir}/kleaner.php">
			<arg value="${basedir}/build/${version}/xml/classes.xml"></arg>
			<arg value="${basedir}/${version}/"></arg>
		</exec>
	</target>
</project>